{
  "problem": "Add Two Numbers",
  "description": "You are given two non-empty linked lists representing two non-negative integers.",
  "testCases": [
    {
      "name": "Example 1",
      "input": {
        "l1": [2,4,3],
        "l2": [5,6,4]
      },
      "expected": [7,0,8],
      "description": "Basic example from the problem description"
    },
    {
      "name": "Edge Case 1",
      "input": {
        "l1": [],
        "l2": []
      },
      "expected": [],
      "description": "Empty inputs"
    },
    {
      "name": "Boundary Condition 1",
      "input": {
        "l1": [9,9],
        "l2": [1]
      },
      "expected": [0,0,0],
      "description": "Carry over to next digit"
    }
  ]
}
